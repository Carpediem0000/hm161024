@model IEnumerable<shop_app.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Read";
    Layout = "_Layout";
}

<h1>Product Read</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    <a href="@Url.Action("Update", new {Id = product.Id})" class="btn btn-warning">Update</a>
                    <a href="@Url.Action("Details", new {Id = product.Id})" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", new {Id = product.Id})" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Create")" class="btn btn-success">Create</a>
                </td>
            </tr>
        }
    </tbody>
</table>